{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Atomic Design System — W3C Design Tokens Community Group (DTCG) format. Auto-generated from src/index.css CSS custom properties.",
  "$version": "1.0.0",

  "color": {
    "$type": "color",

    "background": {
      "$description": "Page background — darkest surface layer",
      "dark":  { "$value": "hsl(20 14% 4%)" },
      "light": { "$value": "hsl(30 5% 96%)" },
      "warm":  { "$value": "hsl(30 18% 91%)" }
    },
    "surface": {
      "$description": "Panels, sidebars, headers — mid-layer",
      "dark":  { "$value": "hsl(20 8% 8%)" },
      "light": { "$value": "hsl(40 6% 97%)" },
      "warm":  { "$value": "hsl(40 15% 94%)" }
    },
    "card": {
      "$description": "Cards, dialogs, elevated content — top layer",
      "dark":  { "$value": "hsl(12 6% 15%)" },
      "light": { "$value": "hsl(40 8% 99%)" },
      "warm":  { "$value": "hsl(30 25% 97%)" }
    },
    "foreground": {
      "$description": "Primary text color",
      "dark":  { "$value": "hsl(60 9% 98%)" },
      "light": { "$value": "hsl(24 10% 10%)" },
      "warm":  { "$value": "hsl(12 6% 15%)" }
    },
    "foreground-muted": {
      "$description": "Secondary text — timestamps, labels",
      "dark":  { "$value": "hsl(24 5% 64%)" },
      "light": { "$value": "hsl(20 6% 41%)" },
      "warm":  { "$value": "hsl(20 6% 41%)" }
    },
    "foreground-subtle": {
      "$description": "Tertiary text — placeholders, hints",
      "dark":  { "$value": "hsl(24 5% 45%)" },
      "light": { "$value": "hsl(20 3% 55%)" },
      "warm":  { "$value": "hsl(20 3% 55%)" }
    },

    "primary": {
      "$description": "Standard button fills — inverts with theme",
      "dark":  { "$value": "hsl(20 6% 90%)" },
      "light": { "$value": "hsl(24 10% 10%)" },
      "warm":  { "$value": "hsl(15 10% 22%)" }
    },
    "primary-foreground": {
      "dark":  { "$value": "hsl(20 14% 4%)" },
      "light": { "$value": "hsl(40 6% 98%)" },
      "warm":  { "$value": "hsl(30 25% 97%)" }
    },
    "secondary": {
      "dark":  { "$value": "hsl(20 8% 17%)" },
      "light": { "$value": "hsl(30 8% 93%)" },
      "warm":  { "$value": "hsl(28 14% 87%)" }
    },
    "secondary-foreground": {
      "dark":  { "$value": "hsl(60 9% 98%)" },
      "light": { "$value": "hsl(24 10% 10%)" },
      "warm":  { "$value": "hsl(12 6% 15%)" }
    },
    "muted": {
      "dark":  { "$value": "hsl(24 10% 12%)" },
      "light": { "$value": "hsl(25 6% 91%)" },
      "warm":  { "$value": "hsl(25 12% 88%)" }
    },
    "muted-foreground": {
      "dark":  { "$value": "hsl(24 5% 64%)" },
      "light": { "$value": "hsl(20 6% 41%)" },
      "warm":  { "$value": "hsl(20 6% 41%)" }
    },

    "accent": {
      "$description": "Primary CTA — terracotta orange",
      "dark":  { "$value": "hsl(18 65% 55%)" },
      "light": { "$value": "hsl(18 65% 55%)" },
      "warm":  { "$value": "hsl(18 60% 45%)" }
    },
    "accent-foreground": {
      "dark":  { "$value": "hsl(60 9% 98%)" },
      "light": { "$value": "hsl(40 6% 99%)" },
      "warm":  { "$value": "hsl(30 25% 97%)" }
    },
    "accent-muted": {
      "$description": "Soft terracotta — hover states, disabled badges",
      "dark":  { "$value": "hsl(18 40% 30%)" },
      "light": { "$value": "hsl(18 35% 65%)" },
      "warm":  { "$value": "hsl(18 38% 55%)" }
    },
    "accent-subtle": {
      "$description": "Warm highlight — code blocks, active tab selection",
      "dark":  { "$value": "hsl(20 15% 10%)" },
      "light": { "$value": "hsl(30 12% 94%)" },
      "warm":  { "$value": "hsl(30 15% 92%)" }
    },
    "warm-dark": {
      "$description": "High-contrast emphasis text on warm-toned surfaces",
      "dark":  { "$value": "hsl(20 8% 72%)" },
      "light": { "$value": "hsl(20 12% 36%)" },
      "warm":  { "$value": "hsl(20 14% 30%)" }
    },

    "destructive": {
      "dark":  { "$value": "hsl(6 65% 60%)" },
      "light": { "$value": "hsl(6 70% 52%)" },
      "warm":  { "$value": "hsl(8 60% 48%)" }
    },
    "destructive-foreground": {
      "dark":  { "$value": "hsl(60 9% 98%)" },
      "light": { "$value": "hsl(40 6% 99%)" },
      "warm":  { "$value": "hsl(30 25% 97%)" }
    },

    "border": {
      "dark":  { "$value": "hsl(25 8% 25%)" },
      "light": { "$value": "hsl(25 8% 89%)" },
      "warm":  { "$value": "hsl(28 14% 81%)" }
    },
    "input": {
      "dark":  { "$value": "hsl(20 8% 17%)" },
      "light": { "$value": "hsl(25 8% 89%)" },
      "warm":  { "$value": "hsl(28 14% 81%)" }
    },
    "ring": {
      "dark":  { "$value": "hsl(18 65% 55%)" },
      "light": { "$value": "hsl(18 65% 55%)" },
      "warm":  { "$value": "hsl(18 60% 45%)" }
    },

    "popover": {
      "dark":  { "$value": "hsl(12 6% 15%)" },
      "light": { "$value": "hsl(40 8% 99%)" },
      "warm":  { "$value": "hsl(30 25% 97%)" }
    },
    "popover-foreground": {
      "dark":  { "$value": "hsl(60 9% 98%)" },
      "light": { "$value": "hsl(24 10% 10%)" },
      "warm":  { "$value": "hsl(12 6% 15%)" }
    },

    "semantic": {
      "success": {
        "$description": "Positive feedback",
        "dark":  { "$value": "hsl(148 45% 50%)" },
        "light": { "$value": "hsl(148 50% 42%)" },
        "warm":  { "$value": "hsl(152 45% 38%)" }
      },
      "warning": {
        "$description": "Caution feedback",
        "dark":  { "$value": "hsl(40 75% 55%)" },
        "light": { "$value": "hsl(40 80% 48%)" },
        "warm":  { "$value": "hsl(38 70% 45%)" }
      },
      "error": {
        "$description": "Error / danger feedback",
        "dark":  { "$value": "hsl(6 65% 60%)" },
        "light": { "$value": "hsl(6 70% 52%)" },
        "warm":  { "$value": "hsl(8 60% 48%)" }
      },
      "info": {
        "$description": "Informational feedback",
        "dark":  { "$value": "hsl(215 50% 62%)" },
        "light": { "$value": "hsl(215 55% 52%)" },
        "warm":  { "$value": "hsl(215 45% 48%)" }
      }
    },

    "category": {
      "$description": "9 distinct hues for content tagging / anatomy fields",
      "teal":    { "$value": "hsl(185 55% 42%)" },
      "amber":   { "$value": "hsl(38 80% 50%)" },
      "emerald": { "$value": "hsl(152 55% 40%)" },
      "orange":  { "$value": "hsl(25 85% 52%)" },
      "violet":  { "$value": "hsl(262 55% 55%)" },
      "rose":    { "$value": "hsl(340 65% 55%)" },
      "blue":    { "$value": "hsl(230 60% 58%)" },
      "red":     { "$value": "hsl(0 70% 55%)" },
      "gold":    { "$value": "hsl(48 85% 48%)" }
    },

    "status": {
      "$description": "Prompt lifecycle status colors",
      "draft":      { "$value": "hsl(45 93% 47%)" },
      "testing":    { "$value": "hsl(217 91% 60%)" },
      "production": { "$value": "hsl(142 71% 45%)" },
      "archived":   { "$value": "hsl(0 0% 45%)" }
    },

    "sidebar": {
      "background": {
        "dark":  { "$value": "hsl(24 10% 10%)" },
        "light": { "$value": "hsl(40 6% 97%)" },
        "warm":  { "$value": "hsl(40 15% 94%)" }
      },
      "foreground": {
        "dark":  { "$value": "hsl(60 9% 98%)" },
        "light": { "$value": "hsl(24 10% 10%)" },
        "warm":  { "$value": "hsl(12 6% 15%)" }
      },
      "primary": {
        "dark":  { "$value": "hsl(18 65% 55%)" },
        "light": { "$value": "hsl(18 65% 55%)" },
        "warm":  { "$value": "hsl(18 60% 45%)" }
      },
      "accent": {
        "dark":  { "$value": "hsl(24 10% 14%)" },
        "light": { "$value": "hsl(30 8% 93%)" },
        "warm":  { "$value": "hsl(28 14% 87%)" }
      },
      "border": {
        "dark":  { "$value": "hsl(30 6% 25%)" },
        "light": { "$value": "hsl(25 8% 89%)" },
        "warm":  { "$value": "hsl(28 14% 81%)" }
      }
    }
  },

  "dimension": {
    "$type": "dimension",

    "radius": {
      "$description": "Base border radius",
      "$value": "0.75rem"
    },
    "radius-md": {
      "$value": "calc(0.75rem - 2px)"
    },
    "radius-sm": {
      "$value": "calc(0.75rem - 4px)"
    },

    "header-height": { "$value": "3.5rem" },
    "sidebar-width": { "$value": "15rem" },
    "sidebar-collapsed": { "$value": "4rem" },
    "right-panel": { "$value": "22rem" }
  },

  "fontFamily": {
    "$type": "fontFamily",

    "display": {
      "$description": "Headings, labels, buttons",
      "$value": ["Plus Jakarta Sans", "Poppins", "Inter", "system-ui", "sans-serif"]
    },
    "body": {
      "$description": "Body text, descriptions",
      "$value": ["Satoshi", "Outfit", "Inter", "system-ui", "sans-serif"]
    },
    "mono": {
      "$description": "Data, code, user-editable content",
      "$value": ["JetBrains Mono", "IBM Plex Mono", "Consolas", "monospace"]
    }
  },

  "fontSize": {
    "$type": "dimension",

    "2xs":  { "$value": "0.625rem",  "$description": "10px" },
    "xs":   { "$value": "0.75rem",   "$description": "12px" },
    "sm":   { "$value": "0.8125rem", "$description": "13px" },
    "base": { "$value": "0.875rem",  "$description": "14px" },
    "md":   { "$value": "1rem",      "$description": "16px" },
    "lg":   { "$value": "1.125rem",  "$description": "18px" },
    "xl":   { "$value": "1.375rem",  "$description": "22px" },
    "2xl":  { "$value": "1.5rem",    "$description": "24px" },
    "3xl":  { "$value": "2.25rem",   "$description": "36px" }
  },

  "duration": {
    "$type": "duration",

    "instant": { "$value": "50ms" },
    "fast":    { "$value": "100ms" },
    "normal":  { "$value": "150ms" },
    "medium":  { "$value": "200ms" },
    "slow":    { "$value": "300ms" }
  },

  "cubicBezier": {
    "$type": "cubicBezier",

    "default": { "$value": [0.4, 0, 0.2, 1] },
    "out":     { "$value": [0, 0, 0.2, 1] },
    "in":      { "$value": [0.4, 0, 1, 1] },
    "spring":  { "$value": [0.34, 1.56, 0.64, 1] }
  },

  "zIndex": {
    "$type": "number",

    "base":     { "$value": 0 },
    "dropdown": { "$value": 50 },
    "sticky":   { "$value": 100 },
    "overlay":  { "$value": 200 },
    "modal":    { "$value": 300 },
    "toast":    { "$value": 400 }
  }
}
